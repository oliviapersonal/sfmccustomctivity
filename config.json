{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/FaxIcon.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "Fax Activity",
           "description": "An Example of fax ativity"
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "emailAddress": "{{Contact.Default.Email}}"
                },
                {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                }
            ],
            "outArguments": [
                {
                    "faxContact": ""
                }
            ],
            "url": "https://weatheralbert.herokuapp.com/execute",
			"verb": "POST"
        }
    },
    "configurationArguments": {
       "save": {
           "url": "https://weatheralbert.herokuapp.com/save"
       },
       "publish": {
           "url": "https://weatheralbert.herokuapp.com/publish"
       },
       "validate": {
           "url": "https://weatheralbert.herokuapp.com/validate"
       },
       "stop": {
           "url": "https://weatheralbert.herokuapp.com/stop"
       }
    },
    "wizardSteps": [
       { "label": "Step 1", "key": "step1" },
       { "label": "Step 2", "key": "step2" },
    ],
    "userInterfaces": {
       "configModal": {
           "height": 200,
           "width": 300,
           "fullscreen": true
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "phoneNumber": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "emailAddress": {
                            "dataType": "Email",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "faxContact": {
                            "dataType": "Text",
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}
